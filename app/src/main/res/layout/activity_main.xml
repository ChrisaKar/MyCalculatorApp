<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">
    >

    <!-- Result Display -->
    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="end"
        android:text="0"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <!-- Calculator Buttons -->
    <GridLayout
        android:id="@+id/gridLayoutButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewResult"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:columnCount="4"
        android:rowCount="5">

        <!-- Digits -->
        <Button
            android:id="@+id/button1"
            style="@style/CalculatorButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1" />

        <Button
            android:id="@+id/button2"
            style="@style/CalculatorButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2" />

        <Button
            android:id="@+id/button3"
            style="@style/CalculatorButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3" />

        <ImageButton
            android:id="@+id/delButton"
            style="@style/CalculatorButton"
            android:layout_width="88dip"
            android:layout_gravity="center"
            android:minHeight="48dip"
            android:src="@android:drawable/ic_input_delete" />

        <Button
            android:id="@+id/button4"
            style="@style/CalculatorButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4" />

        <Button
            android:id="@+id/button5"
            style="@style/CalculatorButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5" />

        <Button
            android:id="@+id/button6"
            style="@style/CalculatorButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6" />

        <Button
            android:id="@+id/plus"
            style="@style/CalculatorButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+" />

        <Button
            android:id="@+id/button7"
            style="@style/CalculatorButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7" />

        <Button
            android:id="@+id/button8"
            style="@style/CalculatorButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8" />

        <!-- Operators -->
        <Button
            android:id="@+id/button9"
            style="@style/CalculatorButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9" />

        <Button
            android:id="@+id/minus"
            style="@style/CalculatorButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-" />

        <Button
            android:id="@+id/decimalPoint"
            style="@style/CalculatorButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="." />

        <Button
            android:id="@+id/button0"
            style="@style/CalculatorButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0" />

        <Button
            android:id="@+id/mult"
            style="@style/CalculatorButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*" />


        <Button
            android:id="@+id/divide"
            style="@style/CalculatorButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/" />
        <!-- Special Functions -->
        <Button
            android:id="@+id/eq"
            style="@style/CalculatorButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:text="=" />

    </GridLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_below="@id/gridLayoutButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="end"
        android:text="From"
        android:textColor="@android:color/black"
        android:textSize="24sp" />
    <Spinner
        android:id="@+id/simple_spinner_item"
        android:layout_below="@id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView4"
        android:layout_below="@id/simple_spinner_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="end"
        android:text="To"
        android:textColor="@android:color/black"
        android:textSize="24sp" />
    <Spinner
        android:id="@+id/simple_spinner_item2"
        android:layout_below="@id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/convertButton"
        android:layout_below="@id/simple_spinner_item2"

        style="@style/CalculatorButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Convert" />

    <TextView
        android:id="@+id/textView2"
        android:layout_below="@id/convertButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="end"
        android:text="0"
        android:textColor="@android:color/black"
        android:textSize="24sp" />



</RelativeLayout>
